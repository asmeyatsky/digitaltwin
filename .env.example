# Digital Twin Development Environment Variables
# Copy this file to .env and update with your actual values

# Environment
DEPLOYMENT_ENVIRONMENT=development

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=digitaltwin_dev
DB_USER=devuser
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_32_CHARS_MIN
CONNECTION_STRING=Server=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_STRONG_PASSWORD
REDIS_CONNECTION_STRING=${REDIS_HOST}:${REDIS_PORT}

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_THIS_RABBITMQ_STRONG_PASSWORD
RABBITMQ_VIRTUAL_HOST=digitaltwin
RABBITMQ_CONNECTION_STRING=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/${RABBITMQ_VIRTUAL_HOST}

# JWT Configuration
JWT_SECRET_KEY=GENERATE_256_BIT_RANDOM_BASE64_KEY_USE_OPENSSL rand -base64 32
JWT_ISSUER=DigitalTwin
JWT_AUDIENCE=DigitalTwin
JWT_EXPIRY_MINUTES=60

# API Configuration
API_URL=http://localhost:5000
API_BASE_URL=http://localhost:5000/api
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# External Services Configuration
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK
TEAMS_WEBHOOK=https://outlook.office.com/webhook/YOUR_TEAMS_WEBHOOK
NOTIFICATION_EMAIL=notifications@digitaltwin.com

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# Unity Configuration
UNITY_SERVER_URL=http://localhost:8081
UNITY_BUILD_PATH=./Builds/WebGL
UNITY_ASSETS_PATH=./Assets

# Avatar Twin Services Configuration
# DeepFace emotion recognition
DEEPFACE_URL=http://localhost:8001

# Avatar Generation Service (3D face reconstruction)
AVATAR_GENERATION_URL=http://localhost:8002

# Voice Service (ElevenLabs TTS + Voice Cloning)
VOICE_SERVICE_URL=http://localhost:8003
ELEVENLABS_API_KEY=CHANGE_THIS_ELEVENLABS_API_KEY

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.csv,.xlsx

# Additional Service Configuration (for docker-compose)
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD

# Database User IDs (optional, for security)
DB_UID=999
DB_GID=999

# Logging Configuration
LOG_LEVEL=Information
LOG_PATH=./logs
LOG_RETENTION_DAYS=30
LOG_FORMAT=json

# Cache Configuration
CACHE_DURATION_SECONDS=300
CACHE_MAX_SIZE=1000

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
ENABLE_RESPONSE_COMPRESSION=true

# Security Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
RATE_LIMIT_REQUESTS_PER_MINUTE=100
ENABLE_RATE_LIMITING=true

# Testing Configuration
TEST_DATABASE_NAME=digitaltwin_test
TEST_REDIS_DB=1
TEST_RABBITMQ_VHOST=digitaltwin_test

# Development Tools Configuration
DEBUG_MODE=true
ENABLE_PROFILING=false
ENABLE_SWAGGER=true
ENABLE_API_EXPLORER=true

# CI/CD Configuration
GITHUB_TOKEN=CHANGE_THIS_GITHUB_TOKEN
DOCKER_REGISTRY=your-registry.com
SONAR_TOKEN=CHANGE_THIS_SONAR_TOKEN
CODECOV_TOKEN=CHANGE_THIS_CODECOV_TOKEN

# Environment-specific overrides
if [ "$DEPLOYMENT_ENVIRONMENT" = "staging" ]; then
    DB_HOST=staging-db.digitaltwin.com
    REDIS_HOST=staging-redis.digitaltwin.com
    RABBITMQ_HOST=staging-rabbitmq.digitaltwin.com
    API_URL=https://staging.digitaltwin.com
    LOG_LEVEL=Debug
fi

if [ "$DEPLOYMENT_ENVIRONMENT" = "production" ]; then
    DB_HOST=prod-db.digitaltwin.com
    REDIS_HOST=prod-redis.digitaltwin.com
    RABBITMQ_HOST=prod-rabbitmq.digitaltwin.com
    API_URL=https://api.digitaltwin.com
    LOG_LEVEL=Warning
    DEBUG_MODE=false
    ENABLE_HTTPS=true
fi